<div id="<%= dom_id story %>" class="py-4 <%= 'border-top' if index != 0 %>">
  <div class="h4"><%= link_to story.title, story, :class => "text-reset text-decoration-none" %></div>
  <div class="small text-muted mb-2">
    <%= time_ago(story.created_at) %> <%= t("posted_by", name: story.user.name) %>
  </div>
  <p class="mb-1">
    <%= sanitize(story.description.truncate(400), tags: []) %>
  </p>
  <% if story.country %>
    <div class="text-muted"><%= story.country_name %></div>
  <% end %>
</div>
