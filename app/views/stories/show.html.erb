<% content_for :title, @story.title %>

<%= render @story %>

<div>
  <% if can_edit?(@story) %>
    <%= link_to t(".edit_story"), edit_story_path(@story), :class => "btn btn-primary" %>
  <% end %>
  <% if can_destroy?(@story) %>
    <%= button_to t(".destroy_story"), @story, method: :delete, :class => "btn btn-danger mt-2" %>
  <% end %>
</div>
