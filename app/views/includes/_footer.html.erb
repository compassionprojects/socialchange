<div class="my-5"></div>
<footer class="footer mt-auto py-3 border-top">
  <div class="container py-5">
    <div class="row">
      <div class="col-lg-3 col-sm-6 col-12">
        <div class="text-muted pb-3">
          <%= t('.about') %>
        </div>
        <ul class="list-unstyled pt-2">
          <li class="mt-3 mt-sm-2">
            <%= link_to t('.home'), root_path %>
          </li>
          <li class="mt-3 mt-sm-2">
            <%= link_to t('.contact'), "mailto:madhu@nomaddev.co" %>
          </li>
          <li class="mt-3 mt-sm-2">
            <%= link_to t('.stories'), stories_path %>
          </li>
          <% if !user_signed_in? %>
            <li class="mt-3 mt-sm-2">
              <%= link_to t('users.login'), new_user_session_path %>
            </li>
            <li class="mt-3 mt-sm-2">
              <%= link_to t('users.signup'), new_user_registration_path %>
            </li>
          <% end %>
        </ul>
      </div>

      <div class="col-lg-3 col-sm-6 col-12 mt-sm-0 mt-4">
        <div class="text-muted pb-3"><%= t('.community') %></div>
        <ul class="list-unstyled pt-2">
          <li class="mt-3 mt-sm-2">
            <a
