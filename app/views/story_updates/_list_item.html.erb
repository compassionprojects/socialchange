<div id="<%= dom_id story_update %>">
  <strong><%= story_update.title %></strong>
  <div class="small text-muted">
    <%= time_ago(story_update.created_at) %> <%= t("posted_by", name: story_update.user.name) %>
  </div>
  <p class="mt-2">
    <%= story_update.description %>
  </p>
  <div class="d-flex">
    <% if can_edit?(story_update) %>
      <%= link_to t(".edit_story_update"), edit_story_update_path(story_update), :class => "btn btn-sm btn-outline-primary" %>&nbsp;
    <% end %>
    <% if can_destroy?(story_update) %>
      <%= button_to t(".destroy_story_update"), story_update, method: :delete, :class => "btn btn-sm btn-outline-danger", form: { data: { turbo_method: :delete, turbo_confirm: t('common.are_you_sure') } }  %>
    <% end %>
  </div>
</div>
